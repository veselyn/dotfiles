set undodir=$XDG_DATA_HOME/vim/undo//
set shellpipe=2>&1\|\ tee
set shell=$HOME/.vim/shell
set shortmess-=S
set shortmess+=FIc
set updatetime=100
set signcolumn=yes
set colorcolumn=80
set lazyredraw
set number
set relativenumber
set smartindent
set mouse=a
set clipboard=unnamed
set splitbelow
set splitright
set ignorecase
set smartcase
set incsearch
set hlsearch
set nowrapscan
