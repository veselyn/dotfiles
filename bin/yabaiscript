#!/usr/bin/env sh

. "$(dirname "$0")/_yabaiscript/resize.sh"

start() {
  brew services start "$1"
}

stop() {
  brew services stop "$1"
}

restart() {
  brew services restart "$1"
}

case $1 in
start)
  case $2 in
  yabai)
    start yabai
    ;;
  skhd)
    start skhd
    ;;
  *)
    start yabai
    start skhd
    ;;
  esac
  ;;
stop)
  case $2 in
  yabai)
    stop yabai
    ;;
  skhd)
    stop skhd
    ;;
  *)
    stop yabai
    stop skhd
    ;;
  esac
  ;;
restart)
  case $2 in
  yabai)
    restart yabai
    ;;
  skhd)
    restart skhd
    ;;
  *)
    restart yabai
    restart skhd
    ;;
  esac
  ;;
resize)
  resize "$2"
  ;;
esac
