#!/usr/bin/env sh

. "$(dirname "$0")/_yabaiscript/services.sh"
. "$(dirname "$0")/_yabaiscript/focus.sh"
. "$(dirname "$0")/_yabaiscript/swap.sh"
. "$(dirname "$0")/_yabaiscript/warp.sh"
. "$(dirname "$0")/_yabaiscript/space.sh"
. "$(dirname "$0")/_yabaiscript/move.sh"
. "$(dirname "$0")/_yabaiscript/resize.sh"
. "$(dirname "$0")/_yabaiscript/insert.sh"
. "$(dirname "$0")/_yabaiscript/toggle.sh"

case $1 in
start | stop | restart)
  services "$1" "$2"
  ;;
focus)
  focus "$2"
  ;;
swap)
  swap "$2"
  ;;
warp)
  warp "$2"
  ;;
space)
  space "$2"
  ;;
move)
  move "$2"
  ;;
resize)
  resize "$2"
  ;;
insert)
  insert "$2"
  ;;
toggle)
  toggle "$2"
  ;;
esac
